<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailObat">

    <!-- Tombol Back -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Gambar Obat -->
    <ImageView
        android:id="@+id/imageObat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="Gambar Obat"
        android:scaleType="fitCenter"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nama Obat -->
    <TextView
        android:id="@+id/namaObat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paracetamol"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageObat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Jenis Obat -->
    <TextView
        android:id="@+id/jenisObat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pain Reliever"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/namaObat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Harga -->
    <TextView
        android:id="@+id/hargaObat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp10.000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/jenisObat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label Deskripsi -->
    <TextView
        android:id="@+id/labelDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/hargaObat"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Deskripsi Obat -->
    <TextView
        android:id="@+id/descObat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Paracetamol is used to relieve pain and reduce fever..."
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/labelDeskripsi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Jumlah Input -->
    <EditText
        android:id="@+id/editJumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jumlah"
        android:inputType="number"
        android:padding="12dp"
        android:background="@color/cardview_light_background"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/descObat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Tombol Add to Cart -->
    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Add to Cart"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
